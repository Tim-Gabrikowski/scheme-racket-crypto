; 1.1 BogenmaÃŸ -> Grad
(define (rad->deg r)
  (* r (/ 180 pi))
)
; 1.1 Grad -> BogenmaÃŸ
(define (deg->rad d)
  (* d (/ pi 180))
)

; 1.2 (output in rad!)
(define (arccos r)
  (atan (/ (sqrt (- 1 (* r r))) r))
)

; 1.3 nm->km
(define (nm->km nm)
  (* nm 1.852)
)
; 1.3 km->nm
(define (km->nm km)
  (/ km 1.852)
)