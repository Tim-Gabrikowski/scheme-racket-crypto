(define (zweites list)
  (cond ((null? list) '(none))
        ((null? (rest list)) '(none))
        (else (first (rest list)))
        )
)
(define (drittes list)
  (cond ((null? list) '(none))
        ((null? (rest list)) '(none))
        ((null? (rest (rest list))) '(none))
        (else (first (rest (rest list))))
        )
)
(define (ohneErstes list)
  (rest list)
)

(define (ohneErstesUndZweites list)
  (rest (ohneErstes list))
)
(define (ohneZweites list)
  (cons (first list) (ohneErstesUndZweites list))
)
(define (ohneDrittes list)
  (cons (first list) (cons (zweites list) (rest (ohneErstesUndZweites list))))
)